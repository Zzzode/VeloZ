{
  "name": "veloz-installer",
  "productName": "VeloZ",
  "version": "1.0.0",
  "description": "VeloZ - Professional Crypto Trading Platform",
  "main": "src/main.js",
  "author": {
    "name": "VeloZ Team",
    "email": "team@veloz.io"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint src --ext .js,.ts",
    "build:ui": "cd ../ui && npm run build && cp -r dist ../installer/resources/ui",
    "prebuild": "npm run build:ui",
    "package:win": "electron-forge package --platform win32 --arch x64",
    "package:mac": "electron-forge package --platform darwin --arch x64,arm64",
    "package:linux": "electron-forge package --platform linux --arch x64",
    "make:win": "electron-forge make --platform win32 --arch x64",
    "make:mac": "electron-forge make --platform darwin --arch x64,arm64",
    "make:linux": "electron-forge make --platform linux --arch x64"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.3.9",
    "electron-store": "^8.2.0",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-dmg": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
    "@electron-forge/plugin-fuses": "^7.6.0",
    "@electron-forge/publisher-github": "^7.6.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^33.2.0",
    "eslint": "^9.15.0"
  },
  "config": {
    "forge": "./forge.config.js"
  }
}
