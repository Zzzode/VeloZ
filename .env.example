# VeloZ Trading Engine Configuration
# Copy this file to .env and update with your actual values

# Build preset (dev/release)
VELOZ_PRESET=dev

# API server configuration
VELOZ_HOST=0.0.0.0
VELOZ_PORT=8080

# Market data configuration
VELOZ_MARKET_SOURCE=binance_rest
VELOZ_MARKET_SYMBOL=BTCUSDT

# Execution mode (sim_engine/binance_testnet_spot)
VELOZ_EXECUTION_MODE=sim_engine

# Binance API configuration
VELOZ_BINANCE_BASE_URL=https://api.binance.com
VELOZ_BINANCE_TRADE_BASE_URL=https://testnet.binance.vision
VELOZ_BINANCE_API_KEY=dummy_key
VELOZ_BINANCE_API_SECRET=dummy_secret

# Logging configuration
VELOZ_LOG_LEVEL=INFO

# Risk management configuration
VELOZ_RISK_MAX_POSITION_SIZE=10000
VELOZ_RISK_MAX_DAILY_LOSS=500

# Strategy configuration
VELOZ_STRATEGY_NAME=test_strategy
VELOZ_STRATEGY_PARAM_1=1.0
VELOZ_STRATEGY_PARAM_2=0.5