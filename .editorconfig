root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,h,hpp,inl,cxx,cc}]
indent_style = space
indent_size = 2

[*.{cmake,txt}]
indent_style = space
indent_size = 2

[*.{js,ts,tsx,jsx,json,yml,yaml}]
indent_style = space
indent_size = 2

